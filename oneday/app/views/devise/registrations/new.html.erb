<div class="logo">six tasks</div>

<div id="sign_up_form" class="sign_forms">
	<%= form_for(resource, :as => resource_name,  html: {:class => "form-horizontal"}, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
    <div style="width:100% !important;" class="container">

      <form class="form-signin" role="form">
		 <%= f.email_field :email, :placeholder=>'Email', :class=>'form-control', :autofocus => true %>
		 <%= f.password_field :password, :placeholder=>'Password', :class=>'form-control', :required=>true %>
		 <%= f.password_field :password_confirmation, :placeholder=>'Password confirmation', :class=>'form-control', :required=>true %>	
		
		<button style="margin-top:20px;" type="submit" name="commit" class="btn btn-lg btn-default btn-block btn-outline">Sign Up</button>
      </form>

    </div> <!-- /container -->
	<% end %>

	<%= render "devise/shared/links" %>
</div>
