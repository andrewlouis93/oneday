<div class="logo">one day</div>

<div class="sign_forms input-group">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-horizontal", :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  		<%= f.label :email, :class=>'col-sm-2 control-label' %>
  		<div class="col-sm-10">
  			<%= f.email_field :email, :class=>'form-control', :autofocus => true %>
  		</div>
  </div>

  <div class="form-group">
  	<div class="col-sm-offset-2 col-sm-10">
    	<button type="submit" name="commit" class="btn btn-default">Send me reset password instructions</button>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

