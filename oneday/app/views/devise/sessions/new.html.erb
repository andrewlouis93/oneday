<div class="logo">six tasks</div>

<div id="sign_in_form" class="sign_forms">
	<%= form_for(resource, :as => resource_name,  html: {:class => "form-horizontal"}, :url => session_path(resource_name)) do |f| %>
    <div style="width:100% !important;"class="container">

      <form class="form-signin" role="form">
		 <%= f.email_field :email, :placeholder=>'Email', :class=>'form-control', :autofocus => true %>
		 <%= f.password_field :password, :placeholder=>'Password', :class=>'form-control', :required=>true %>
		
		<% if devise_mapping.rememberable? -%>
        <label id="remember_checkbox" class="checkbox">        	
			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </label>
		<% end -%>
		
		<button type="submit" name="commit" class="btn btn-lg btn-default btn-block btn-outline">Sign In</button>
      </form>

    </div> <!-- /container -->
	<% end %>

	<%= render "devise/shared/links" %>
</div>