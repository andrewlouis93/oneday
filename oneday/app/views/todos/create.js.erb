<% if @todo.valid? %>
	$('<%= j(render(@todo)) %>').hide().prependTo(".todos").fadeIn(500);
	
 	/*$('.todos').animate({scrollTop: $('.todos')[0].scrollHeight},700); */


 	/*Preserving order! Not even using acts_as_list*/
	$.ajax({
        url: '/todos/sort',
        type: 'post',
        data: $('.todos').sortable('serialize'),
        dataType: 'script'
	});	    		

	$(".ajax_submit").val('')
<% else %> 
	$(".ajax_submit").val('')
	alert('Something went wrong!');
<% end %>