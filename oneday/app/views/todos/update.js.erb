<% if @todo.valid? %>
	<% if @todo.done? %>
		$(".todos").find("[data-id='" + <%= @todo.id %> + "']").fadeOut(500);
		$('<%= j(render :partial=>"todone", locals:{todo: @todo}) %>').prependTo(".todones").hide().fadeIn(500);
	<% else %>
		$(".todones").find("[data-id='" + <%= @todo.id %> + "']").fadeOut(500);
		$('<%= j(render :partial=>"todo", locals:{todo: @todo}) %>').prependTo(".todos").hide().fadeIn(500);
	<% end %>
<% else %> 
	console.log("or here");
<% end %>